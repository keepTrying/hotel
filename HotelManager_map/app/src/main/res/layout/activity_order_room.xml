<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activity.OrderRoomActivity">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认预订"
        android:id="@+id/btn_confirm"
        android:layout_gravity="center"
        android:layout_columnSpan="2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="房间号："
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="22dp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100001"
        android:id="@+id/textView_room_num"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="入住日期："
        android:id="@+id/textView_begin"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/textView_room_num"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="离开日期："
        android:id="@+id/textView_end"
        android:layout_below="@+id/textView_begin"
        android:layout_alignEnd="@+id/textView_begin"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText_begin"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignBottom="@+id/textView_begin"
        android:hint="例：2015-01-03"
        android:editable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText_end"
        android:layout_toEndOf="@+id/textView_end"
        android:layout_alignBottom="@+id/textView_end"
        android:hint="例：2015-01-03"
        android:editable="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="费用："
        android:id="@+id/textView5"
        android:layout_marginLeft="30dp"
        android:textSize="22dp"
        android:layout_below="@+id/editText_end"
        android:layout_toStartOf="@+id/editText_end"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1000元/天"
        android:id="@+id/textView_cost"
        android:textSize="25dp"
        android:layout_toEndOf="@+id/textView_end"
        android:layout_alignBottom="@+id/textView5"/>

</RelativeLayout>
