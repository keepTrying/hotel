<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="com.dreamfactory.hotelmanager.activity.RoomDetail"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5"
        >

        <RelativeLayout
            tools:context="com.dreamfactory.hotelmanager.activity.RoomDetail"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预订房间"
                android:id="@+id/btn_order"
                android:layout_below="@+id/textView_room_facility"
                android:layout_centerHorizontal="true" />

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:id="@+id/imageView_room"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/textView_room_area"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="房间号"
                android:id="@+id/textView38"
                android:layout_toEndOf="@+id/imageView_room"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_room"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="100001"
                android:id="@+id/textView_room_num"
                android:layout_below="@+id/textView38"
                android:layout_alignLeft="@+id/textView38"
                android:layout_alignStart="@+id/textView38"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="房间类型"
                android:id="@+id/textView40"
                android:layout_alignLeft="@+id/textView38"
                android:layout_alignStart="@+id/textView38"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/textView_room_num" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="单人间"
                android:id="@+id/textView_room_type"
                android:layout_alignLeft="@+id/textView38"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"
                android:layout_below="@+id/textView40"
                android:layout_alignEnd="@+id/textView_room_area" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="费用"
                android:id="@+id/textView42"
                android:layout_below="@+id/textView_room_type"
                android:layout_alignLeft="@+id/textView38"
                android:layout_alignStart="@+id/textView_room_type"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="100元/天"
                android:id="@+id/textView_room_cost"
                android:layout_below="@+id/textView42"
                android:layout_alignLeft="@+id/textView38"
                android:layout_alignStart="@+id/textView42"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="房屋面积"
                android:id="@+id/textView44"
                android:layout_alignLeft="@+id/textView38"
                android:layout_below="@+id/textView_room_cost"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="130平米"
                android:id="@+id/textView_room_area"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/textView38"
                android:layout_alignStart="@+id/textView44"
                android:layout_below="@+id/textView44"
                android:layout_marginLeft="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="房间设施"
                android:id="@+id/textView46"
                android:layout_below="@+id/imageView_room"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="床，沙发，电视，电脑，洗浴，沙发，电视，电脑，洗浴"
                android:id="@+id/textView_room_facility"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView46"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="评论列表"
                android:id="@+id/textView48"
                android:layout_below="@+id/btn_order"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.dreamfactory.hotelmanager.view.ListViewForScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_list_view"
                android:layout_below="@+id/textView48"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:dividerHeight="1dp"
                android:divider="#9d8989"
                android:nestedScrollingEnabled="true" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
