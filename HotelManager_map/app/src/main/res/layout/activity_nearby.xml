<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dreamfactory.hotelmanager.NearbyActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美食"
        android:id="@+id/button_food"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="药店"
        android:id="@+id/button_medicine"
        android:layout_below="@+id/button_food"
        android:layout_alignRight="@+id/button_food"
        android:layout_alignEnd="@+id/button_food"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="银行"
        android:id="@+id/button_bank"
        android:layout_below="@+id/button_medicine"
        android:layout_alignLeft="@+id/button_medicine"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电影"
        android:id="@+id/button_movie"
        android:layout_below="@+id/button_bank"
        android:layout_alignLeft="@+id/button_bank"
        android:layout_alignStart="@+id/button_bank"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="超市"
        android:id="@+id/button_market"
        android:layout_below="@+id/button_movie"
        android:layout_alignLeft="@+id/button_movie"
        android:layout_alignStart="@+id/button_movie"
        android:layout_marginTop="31dp" />
</RelativeLayout>
