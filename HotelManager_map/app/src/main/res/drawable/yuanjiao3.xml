<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <solid android:color="#FFF" />
    //设置边距,实现圆角功能
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />

    //控制边界线颜色和笔触大小
    <stroke
        android:width="1dp"
        android:color="#CdCdCd" />

    //控制圆角大小
    <corners android:radius="40dp" />

</shape>