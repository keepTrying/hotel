<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dreamfactory.hotelmanager.NearbyActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="温馨提示：请点击以下按钮搜索相应周边服务！"
        android:id="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="#167cc0"
        android:padding="2dp"
        android:textColor="#f6efef" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="美        食"
        android:id="@+id/button_food"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:background="#eeb9b9"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="0dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="药        店"
        android:id="@+id/button_medicine"
        android:layout_below="@+id/button_food"
        android:layout_alignRight="@+id/button_food"
        android:layout_alignEnd="@+id/button_food"
        android:textSize="18sp"
        android:layout_marginTop="31dp"
        android:layout_alignLeft="@+id/button_food"
        android:background="#6973e7"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="银        行"
        android:id="@+id/button_bank"
        android:layout_below="@+id/button_medicine"
        android:layout_alignLeft="@+id/button_medicine"
        android:layout_marginTop="31dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:background="#afb0e2" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="电        影"
        android:id="@+id/button_movie"
        android:layout_below="@+id/button_bank"
        android:layout_alignLeft="@+id/button_bank"
        android:layout_alignStart="@+id/button_bank"
        android:layout_marginTop="31dp"
        android:textSize="18sp"
        android:layout_alignRight="@+id/button_bank"
        android:background="#56975f" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="超        市"
        android:id="@+id/button_market"








        android:layout_below="@+id/button_movie"
        android:layout_alignLeft="@+id/button_movie"
        android:layout_alignStart="@+id/button_movie"
        android:layout_marginTop="31dp"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/button_movie"
        android:background="#51529b" />

</RelativeLayout>
